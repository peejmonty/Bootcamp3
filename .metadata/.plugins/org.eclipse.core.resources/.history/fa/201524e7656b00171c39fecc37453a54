package viensp_lab1;

import java.util.Scanner;
import java.util.Random;

public class TwoDimArray {

	public static void main(String[] args) {
		//welcome();
		int ColRowNum = ColumnsRows();
		TwoDimArray(ColRowNum);
		//int[][] RowsSum = RowSum(TwoDimArray, ColRowNum);
		//goodbye();

	}
	
	public static void welcome() {
		System.out.println();
		System.out.println("This is the first lab for the new bootcamp.\n"
				+ "I will figure this out as I go along ");
		
	}
	
	public static void goodbye() {
		System.out.println();
		System.out.println("Here we go again on our own!");
		System.out.println();
	}
	
	public static int ColumnsRows() {
		
		int INT_LO = 1;
		int INT_HI = 10;
		int number;
		
		Scanner kbd = new Scanner(System.in);
		System.out.println();
		System.out.println("How many rows and Columns would you'd like: ");
		number = kbd.nextInt();
		kbd.nextLine();
		System.out.println();
		
		while(!(INT_LO <= number && number <= INT_HI))
		{		
				System.out.println();
				System.out.println("Give me a number that is between 1 and 10");
				System.out.println();
				System.out.println("How many rows and Columns would you'd like: ");
				number = kbd.nextInt();
				System.out.println();
		}
		
		return number;

	}
	
	public static void TwoDimArray(int ColRowNum) {
		
		
		final int MAX = ColRowNum * ColRowNum;
		
		int[][] Array = new int [MAX][MAX];
		int [] RowSums = new int [MAX];
		int[] ColSums = new int [MAX];
		int topToBottom = 0;
		int bottomToTop = 0;
		Random rand = new Random();
		int range = 100;
		int row;
		int col;
		int count;
		
		for (row = 0; row < ColRowNum; row++)
		{
			
			for (col = 0; col < ColRowNum; col++)
			{
				Array[row][col] = rand.nextInt(range) + 1;
				RowSums[row] += Array[row][col];
				ColSums[col] += Array[row][col];
				System.out.printf("%3s", Array[row][col]);
				
				if (col == row)
				{
					topToBottom += Array[row][col]; 
				}
				else if (col == col - row)
				{
					bottomToTop += Array[row][col];
				}
			}
			System.out.println();
			
			
		}
		
		for (row = 0; row < ColRowNum; row ++)
		{
			System.out.println(RowSums[row]);
		}
		
		System.out.println();
		System.out.println("ColSums");
		
		for (col = 0; col < ColRowNum; col++)
		{
			System.out.println(ColSums[col]);
		}
		
		//return Array;ss
		
		System.out.println("Top to Bottom Diagonal");
		System.out.println(topToBottom);
		System.out.println(bottomToTop);
		
	}
}